@model ItemRequestCreateVM   

@{
    ViewData["Title"] = "Request Items";
}


<h1>Apply For Item</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-6">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class ="form-select" asp-items="Model?.Products">
                    <option>Select Item</option>
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group mb-6">
                <label asp-for="Quantity_Requested" class="control-label"></label>
                <input asp-for="Quantity_Requested" class="form-control" />
                <span asp-validation-for="Quantity_Requested" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group mb-6">
                <label asp-for="RequstComments" class="control-label"></label>
                <textarea  asp-for="RequstComments" class="form-control"></textarea>
                <span asp-validation-for="RequstComments" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-dark" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


